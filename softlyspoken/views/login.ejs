        <!--login form -->
        <div class="row col-lg-12 col-md-12 col-sm-12 col-12" style="max-height:80%;margin-bottom:5%;">
            <div class="col-lg-7 col-md-7" style="height:100%; ">
                <img class="pic-login-2" src="resources/pic-login-2.svg" style="max-width:auto; max-height:auto;">
            </div>
            <div class="col-lg-5 col-md-4 col-sm-12 col-12 login-form">
                <div class="headertext">
                    <a>Happy to see you agian</a>
                    <br>
                    <a>tell your story with SoftlySpoken.</a>
                </div>
                <form action="/users/login" method="POST">
                    <div class="form-group" style="margin-top:2em;">
                        <input type="text"
                            style="margin-left: -5px; height: 4em; border-bottom-left-radius: 0; border-bottom-right-radius: 0;"
                            class="form-control form-control-lg" placeholder="Username or Email Address" name="name">
                        <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-person-fill"
                            fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                    </div>
                    <div class="form-group" style="margin-top: -2.5em;">
                        <input type="password"
                            style="margin-left: -5px; height: 4em; border-top-left-radius: 0; border-top-right-radius: 0;"
                            class="form-control form-control-lg" placeholder="Password" name="password">
                        <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-lock-fill"
                            fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M2.5 9a2 2 0 0 1 2-2h7a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-7a2 2 0 0 1-2-2V9z" />
                            <path fill-rule="evenodd" d="M4.5 4a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z" />
                        </svg>
                    </div>
                    <div class="remember-forgot-div" style="margin-top: -2em;">

                        <span class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" for="gridCheck" style="color:#FFFFFF;">
                                Remember me
                            </label>
                        </span>
                        <a href="#" style="color:#FFFFFF;">Forgot password?</a>
                    </div>

                    <div class=" row " style="margin-top: 2em;margin-left: 3vw; ">
                        <button class=" myButton ">sign in</button>
                        <span></span>
                        <a href="# " class=" myButton ">Create Account</a>
                    </div>
                </form>


            </div>
